{
    "name": "lazy-boy-loader",
    "version": "1.0.4",
    "description": "一个自动文件延迟加载器",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test-cov": "jest --coverage --runInBand --forceExit",
        "lint": "jshint index.js test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Degfy/lazy-boy.git"
    },
    "keywords": [
        "lazy loader",
        "lazy load",
        "loader",
        "auto load",
        "auto loader",
        "auto file loader",
        "fileLoader",
        "file loader",
        "file-loader",
        "lazy-boy"
    ],
    "author": "degfy@sina.com",
    "license": "ISC",
    "engines": {
        "node": ">= 8.1.4"
    },
    "files": [
        "index.js",
        "lib"
    ],
    "jest": {
        "testMatch": [
            "**/test/index.js",
            "**/test/!(helpers)/*.js"
        ],
        "coverageReporters": [
            "text-summary",
            "lcov"
        ],
        "bail": true,
        "testEnvironment": "node"
    },
    "dependencies": {
        "rubbi": "^1.0.4"
    },
    "devDependencies": {
        "jshint": "^2.10.2",
        "jest": "^24.8.0"
    }
}
